<div id="post_show_content" class="skinny_wrapper wrapper_padding">
		<header>
			<p class="date"><%= @project.created_at.strftime("%A, %B  %d") %></p>
			<h1><%= @project.title%></h1>
			<hr>
		</header>
		<div id="content">
			<%= markdown @project.description %>  
			<div class="button_wrapper">
				<a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
			</div>
		</div>

		<% if user_signed_in? %>
			<br>
			<br>
			<div id="admin_links">
				<%= link_to "Edit", edit_post_path(@project) %>
				<%= link_to "Delete", post_path(@project), method: :delete, data: { confirm:  "Are you sure you want to delete this article?"} %>
			</div>
		<% end %>
				
		<hr> 

</div>

